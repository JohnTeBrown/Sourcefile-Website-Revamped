<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="styles.css" />
    <script
      src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.js"
      defer></script>
      <style>
        .download-manager {
  width: 300px;
  margin: 20px auto;
}

.download-item {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
  margin-bottom: 10px;
}

.download-icon {
  font-size: 24px;
  margin-right: 10px;
}

.download-title {
  margin: 0;
}

.download-size {
  margin: 0;
  font-size: 14px;
  color: #666;
}

.download-button {
  background-color: #4caf50;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 4px;
  cursor: pointer;
}

      </style>
  </head>
  <body>
    <div
      x-data="{
    downloadFile: function(url) {
      const link = document.createElement('a');
      link.href = url;
      link.download = '';
      link.click();
    }
  }"
    >
      <div class="download-manager">
        <div class="download-item">
          <div class="download-icon">
            <i class="fas fa-file"></i>
          </div>
          <div class="download-info">
            <h3 class="download-title">File Title</h3>
            <p class="download-size">File Size</p>
          </div>
          <button
            class="download-button"
            x-on:click="downloadFile('path/to/your/file')">Download</button
          >
        </div>
      </div>
    </div>
  </body>
</html>
